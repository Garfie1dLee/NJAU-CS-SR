/* pages/newindex/newindex.wxss */

.swiper-container{
  height: 150px;
}
.item{
  height:100%;
  line-height: 150px;
  text-align: center;
  background-color: #bacf65;
}
.tt{
  margin-top: 200px;
}

button {
  width: fit-content;
  min-width: 100px;
  height: 45px;
  padding: 8px;
  border-radius: 5px;
  border: 2.5px solid #E0E1E4;
  box-shadow: 0px 0px 20px -20px;
  cursor: pointer;
  background-color: white;
  transition: all 0.2s ease-in-out 0ms;
  user-select: none;
  font-family: 'Poppins', sans-serif;
}

button:hover {
  background-color: #F2F2F2;
  box-shadow: 0px 0px 20px -18px;
}

button:active {
  transform: scale(0.95);
}
.margintop{
  margin-top: 400px;
}